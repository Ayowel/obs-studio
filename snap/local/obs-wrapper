            "idleTime": 60,
            "idleTransitionName": "",
            "ignoreIdleWindows": [],
            "ignoreWindows": [],
            "interval": 300,
            "mediaSwitches": [],
            "non_matching_scene": "",
            "pauseScenes": [],
            "pauseWindows": [],
            "priority0": 0,
            "priority1": 1,
            "priority2": 2,
            "priority3": 3,
            "priority4": 4,
            "priority5": 5,
            "priority6": 6,
            "priority7": 7,
            "randomSwitches": [],
            "readEnabled": false,
            "readPath": "",
            "sceneRoundTrip": [],
            "sceneTransitions": [],
            "screenRegion": [],
            "switch_if_not_matching": 0,
            "switches": [],
            "threadPriority": 3,
            "timeSwitches": [],
            "writeEnabled": false,
            "writePath": ""
        },
        "auto-scene-switcher": {
            "active": false,
            "interval": 300,
            "non_matching_scene": "",
            "switch_if_not_matching": false,
            "switches": []
        },
        "output-timer": {
            "autoStartRecordTimer": false,
            "autoStartStreamTimer": false,
            "pauseRecordTimer": true,
            "recordTimerHours": 0,
            "recordTimerMinutes": 0,
            "recordTimerSeconds": 30,
            "streamTimerHours": 0,
            "streamTimerMinutes": 0,
            "streamTimerSeconds": 30
        },
        "scrab": {
            "capture_hotkey": [],
            "recapture_hotkey": []
        },
        "scripts-tool": []
    },
    "name": "Untitled",
    "preview_locked": false,
    "quick_transitions": [
        {
            "duration": 300,
            "fade_to_black": false,
            "hotkeys": [],
            "id": 1,
            "name": "Cut"
        },
        {
            "duration": 300,
            "fade_to_black": false,
            "hotkeys": [],
            "id": 2,
            "name": "Fade"
        },
        {
            "duration": 300,
            "fade_to_black": true,
            "hotkeys": [],
            "id": 3,
            "name": "Fade"
        }
    ],
    "saved_projectors": [],
    "scaling_enabled": false,
    "scaling_level": 0,
    "scaling_off_x": 0.0,
    "scaling_off_y": 0.0,
    "scene_order": [
        {
            "name": "Scene"
        }
    ],
    "sources": [
        {
            "balance": 0.5,
            "deinterlace_field_order": 0,
            "deinterlace_mode": 0,
            "enabled": true,
            "flags": 0,
            "hotkeys": {
                "OBSBasic.SelectScene": []
            },
            "id": "scene",
            "mixers": 0,
            "monitoring_type": 0,
            "muted": false,
            "name": "Scene",
            "prev_ver": 419430408,
            "private_settings": {},
            "push-to-mute": false,
            "push-to-mute-delay": 0,
            "push-to-talk": false,
            "push-to-talk-delay": 0,
            "settings": {
                "custom_size": false,
                "id_counter": 0,
                "items": []
            },
            "sync": 0,
            "versioned_id": "scene",
            "volume": 1.0
        }
    ],
    "transition_duration": 300,
    "transitions": []
}
EOM
else
  echo "Found ${SNAP_USER_DATA}/.config/obs-studio/basic/scenes/Untitled.json"
fi

exec "${SNAP}/usr/bin/obs" "${@}"
