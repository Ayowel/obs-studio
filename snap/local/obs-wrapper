#!/usr/bin/env bash

if [ "${SNAP_ARCH}" == "amd64" ]; then
  ARCH="x86_64-linux-gnu"
elif [ "${SNAP_ARCH}" == "armhf" ]; then
  ARCH="arm-linux-gnueabihf"
elif [ "${SNAP_ARCH}" == "arm64" ]; then
  ARCH="aarch64-linux-gnu"
elif [ "${SNAP_ARCH}" == "ppc64el" ]; then
  ARCH="powerpc64le-linux-gnu"
else
  ARCH="${SNAP_ARCH}-linux-gnu"
fi

if [ -e "/var/lib/snapd/lib/gl/xorg/nvidia_drv.so" ]; then
  export VDPAU_DRIVER_PATH="/var/lib/snapd/lib/gl/vdpau"
else
  export VDPAU_DRIVER_PATH="/usr/lib/${ARCH}/vdpau/"
fi

# Make sure the user plugins folder exists.
if [ ! -d "${SNAP_USER_DATA}/.config/obs-studio/plugins" ]; then
  echo "Making ${SNAP_USER_DATA}/.config/obs-studio/plugins"
  mkdir -p "${SNAP_USER_DATA}/.config/obs-studio/plugins"
fi

# Make sure a default Scene configuration exists, prior to OBS launching.
# The prevents some plugins segfaulting on first start of a fresh install.
if [ ! -d "${SNAP_USER_DATA}/.config/obs-studio/basic/scenes" ]; then
  echo "Making ${SNAP_USER_DATA}/.config/obs-studio/basic/scenes"
  mkdir -p "${SNAP_USER_DATA}/.config/obs-studio/basic/scenes"
fi

if [ ! -e "${SNAP_USER_DATA}/.config/obs-studio/basic/scenes/Untitled.json" ]; then
  echo "Making ${SNAP_USER_DATA}/.config/obs-studio/basic/scenes/Untitled.json"
  cat <<'EOM' > "${SNAP_USER_DATA}/.config/obs-studio/basic/scenes/Untitled.json"
{
    "AuxAudioDevice1": {
        "balance": 0.5,
        "deinterlace_field_order": 0,
        "deinterlace_mode": 0,
        "enabled": true,
        "flags": 0,
        "hotkeys": {
            "libobs.mute": [],
            "libobs.push-to-mute": [],
            "libobs.push-to-talk": [],
            "libobs.unmute": []
        },
        "id": "pulse_input_capture",
        "mixers": 255,
        "monitoring_type": 0,
        "muted": false,
        "name": "Mic/Aux",
        "prev_ver": 419430408,
        "private_settings": {},
        "push-to-mute": false,
        "push-to-mute-delay": 0,
        "push-to-talk": false,
        "push-to-talk-delay": 0,
        "settings": {
            "device_id": "default"
        },
        "sync": 0,
        "versioned_id": "pulse_input_capture",
        "volume": 1.0
    },
    "DesktopAudioDevice1": {
