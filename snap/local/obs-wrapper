        },
        "id": "pulse_output_capture",
        "mixers": 255,
        "monitoring_type": 0,
        "muted": false,
        "name": "Desktop Audio",
        "prev_ver": 419430408,
        "private_settings": {},
        "push-to-mute": false,
        "push-to-mute-delay": 0,
        "push-to-talk": false,
        "push-to-talk-delay": 0,
        "settings": {
            "device_id": "default"
        },
        "sync": 0,
        "versioned_id": "pulse_output_capture",
        "volume": 1.0
    },
    "current_program_scene": "Scene",
    "current_scene": "Scene",
    "current_transition": "Fade",
    "groups": [],
    "modules": {
        "advanced-scene-switcher": {
            "active": true,
            "autoStopEnable": false,
            "autoStopSceneName": "",
            "defaultTransitions": [],
            "executableSwitches": [],
            "fileSwitches": [],
